{
  "name": "electron-quick-start-typescript",
  "version": "1.0.0",
  "description": "A minimal Electron application written with Typescript",
  "main": "main/index.js",
  "scripts": {
    "clean": "rimraf dist main",
    "dev": "npm run build && electron .",
    "build-renderer": "tsc -p renderer",
    "build-electron": "tsc -p electron-src",
    "build": "npm run clean && npm run build-renderer && npm run build-electron && npm run copy",
    "pack-app": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:debug": "lldb ./dist/mac/electron-quick-start-typescript.app",
    "dist:unpack": "npx asar extract ./dist/mac/electron-quick-start-typescript.app/Contents/Resources/app.asar ./dist/unpack",
    "copy": "rsync --relative ./renderer/*.html ./main",
    "watch": "tsc -p renderer -w ",
    "lint": "eslint -c .eslintrc --ext .ts ./electron-src",
    "start": "npm run build && electron ./main/index.js"
  },
  "build": {
    "asar": true,
    "files": [
      "main",
      "renderer/out"
    ]
  },
  "repository": "https://github.com/electron/electron-quick-start-typescript",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "electron": "^16.0.6",
    "electron-builder": "^22.14.5",
    "eslint": "^7.32.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "express": "^4.17.2"
  }
}
